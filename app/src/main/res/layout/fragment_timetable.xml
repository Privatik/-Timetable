<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hat"
        android:background="@color/black_late"
        android:layout_height="91dp"
        android:layout_width="match_parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/sizeback"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/marginback" />


        <com.google.android.material.tabs.TabLayout
        android:id="@+id/days"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginTop="12dp"
            ads:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabIconTint="@color/gray"
        app:tabMode="scrollable"
        app:tabTextColor="@color/gray"
        app:tabSelectedTextColor="@color/gray" />

        <ImageButton
            android:id="@+id/curs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/sizeback"
            android:src="@drawable/ic_wrap_text_black_24dp"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/marginback" />

</LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/occupation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>